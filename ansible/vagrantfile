IMAGE_NAME = "bento/ubuntu-16.04"
N = 2

Vagrant.configure("2") do |config|
    config.ssh.insert_key = false

    config.vm.provider "virtualbox" do |v|
        v.memory = 2048
        v.cpus = 4
    end


    config.vm.define "k8s-master" do |node|
                node.vm.box = IMAGE_NAME
                node.vm.network "private_network", ip: "192.168.50.10"
                node.vm.hostname = "k8s-master"
                node.vm.provision "ansible" do |ansible|
                    ansible.groups = {
                       'master-node' => ['k8s-master']
                    }
                    ansible.sudo = true
                    ansible.limit = 'all'
                    ansible.verbose = true
                    ansible.playbook = "master-playbook.yml"
                    ansible.extra_vars = {
                        node_ip: "192.168.50.10",
                        ansible_sudo_pass: "1",
                    }
                end
            end


    (1..N).each do |i|
        config.vm.define "node-#{i}" do |node|
            node.vm.box = IMAGE_NAME
            node.vm.network "private_network", ip: "192.168.50.#{i + 10}"
            node.vm.hostname = "node-#{i}"
            node.vm.provision "ansible" do |ansible|
                ansible.groups = {
                   'worker-nodes' => [node.vm.hostname]
                }
                ansible.sudo = true
                ansible.limit = 'all'
                ansible.verbose = true
                ansible.playbook = "node-playbook.yml"
                ansible.extra_vars = {
                    node_ip: "192.168.50.#{i + 10}",
                }
            end
        end

    config.vm.define "jump-server" do |node|
                        node.vm.box = "debian/stretch64"
                        node.vm.network "private_network", ip: "192.168.50.9"
                        node.vm.hostname = "jump-server"
                        node.vm.provision "ansible" do |ansible|
                            ansible.groups = {
                               'server-node' => ['jump-server']
                            }
                            ansible.sudo = true
                            ansible.limit = 'all'
                            ansible.verbose = true
                            ansible.playbook = "./includes/install-docker/install_docker.yml"
                            ansible.extra_vars = {
                                node_ip: "192.168.50.9",
                                ansible_sudo_pass: "1",
                            }
              end
          end
    end
end